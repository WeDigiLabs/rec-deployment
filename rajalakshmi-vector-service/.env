# Environment Configuration for Rajalakshmi Vector Service

# LM Studio Configuration (OpenAI-compatible API)
OPENAI_API_KEY=not_required_for_lm_studio
OPENAI_BASE_URL=http://localhost:1234/v1
OPENAI_MODEL=embedding
OPENAI_EMBEDDING_DIMENSION=768

# Alternative: OpenAI Cloud API (uncomment to use)
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_BASE_URL=https://api.openai.com/v1
# OPENAI_MODEL=text-embedding-3-small
# OPENAI_EMBEDDING_DIMENSION=1536

# Qdrant Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=rajalakshmi_content
QDRANT_TIMEOUT=60

# Payload CMS Configuration
PAYLOAD_API_URL=http://192.250.228.70:3011/api
PAYLOAD_API_SECRET=

# Database Configuration (if using SQL for metadata)
DATABASE_URL=postgresql://user:password@localhost:5432/rajalakshmi_db

# Processing Configuration
CHUNK_SIZE=800
CHUNK_OVERLAP=100
MAX_TOKENS_PER_CHUNK=1000
BATCH_SIZE=50
MAX_RETRIES=3

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_TIMEOUT=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=structured

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Development/Production Flag
ENVIRONMENT=development
